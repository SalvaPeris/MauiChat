<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="MauiChat.Platforms.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:strings="clr-namespace:MauiChat.Platforms.Resources.Strings"
	xmlns:views="clr-namespace:MauiChat.Platforms.Views"
	xmlns:local="clr-namespace:MauiChat.Platforms"
    Shell.NavBarIsVisible="false">

	<TabBar>
		<ShellContent
			Title="{x:Static strings:AppResources.MyChats}"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:ChatPage}" />
		<ShellContent
			Title="{x:Static strings:AppResources.MyChats}"
			Icon="iconlocalization.png"
			ContentTemplate="{DataTemplate views:LocalizationPage}" />
		<ShellContent
			Title="{x:Static strings:AppResources.MyProfile}"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:ProfilePage}" />
	</TabBar>
</Shell>
