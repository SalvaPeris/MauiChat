<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="MauiChat.Platforms.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:MauiChat.Platforms.Views"
	xmlns:local="clr-namespace:MauiChat.Platforms"
    Shell.NavBarIsVisible="False">

	<TabBar>
		<ShellContent
			Title="Chat"
			Icon="iconlistdetail.png"
			ContentTemplate="{DataTemplate views:ChatPage}" />
		<ShellContent
			Title="Home"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:HomePage}" />
		<ShellContent
			Title="Profile"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:ProfilePage}" />
		<ShellContent
			Title="Localization"
			Icon="iconlocalization.png"
			ContentTemplate="{DataTemplate views:LocalizationPage}" />
		<ShellContent
			Title="Sample"
			Icon="iconsample.png"
			ContentTemplate="{DataTemplate views:SamplePage}" />
	</TabBar>
</Shell>
